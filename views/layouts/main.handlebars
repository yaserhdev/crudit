        </div>
        </div>
        {{#if loggedIn}}
        <div id="nav">
            <ul class="navigation">
                <li><a id="logout">Logout</a></li>
            </ul>
        </div>
        <script src="/js/logout.js"></script>
        {{else}}
        <nav>
            <ul class="navigation">
                <button type="button" class="btn btn-primary" onclick="window.location.href='/login'">Login</button>
                </li>
                <button type="button" class="btn btn-primary" onclick="window.location.href='/signup'">Sign Up</button>
                </li>
            </ul>
        </nav>
        {{/if}}
